# IBM_PROLOG_END_TAG 
#	COMPONENT_NAME		: (AIXPERT) prereqipsec.sh
#	FUNCTIONS		: None
#	ORIGINS			: 27
#
#	Command Line Arguments	: None.
#
#	OUTPUT			: None
#	Description		: This script checks whether IPSec is enabled
#				or not on the machine.

export PATH=/usr/bin:/usr/sbin:$PATH

# Determine whether IPSec is enabled or not.
ipv4=`lsdev -Cc ipsec|grep ipsec_v4|awk '{print $2}'`
ipv6=`lsdev -Cc ipsec|grep ipsec_v6|awk '{print $2}'`

if [ "$ipv6" = "Available" ]
then
	autoconf6
fi

if [ "$ipv4" = "Available" ] || [ "$ipv6" = "Available" ]
then
	exit 0
else
	exit 1
fi
