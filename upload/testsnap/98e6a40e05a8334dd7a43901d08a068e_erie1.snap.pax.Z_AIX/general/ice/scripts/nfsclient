#!/usr/bin/ksh

#GEN005900		check to make sure nfs clients enable nosuid and nosgid

INSTALLDIR=/etc/security/ice/scripts
. $INSTALLDIR/iceInit

PREREQ_LIST="bos.rte.security,bos.rte.date,bos.rte.ILS"

checkPrereq

###########
# Checking
###########
if [[ cflag -eq 1 ]];
then
	#GEN005900
	#AIX does not support nosgid option with mount command.  The nosuid 
	#option in AIX will ensure that execution of setuid and setgid 
	#programs by way of this mount is not allowed. 
	mount | grep nfs | tr -s " " "," 1> $TMPF1
	while read line
	do
		vfstype=`echo $line | cut -d "," -f4`
		fs=`echo $line | cut -d "," -f3`
		if [ `echo $vfstype | grep -c nfs` -gt 0 ]
		then
			if [ `echo $line | grep -c "nosuid"` -gt 0 ]
			then
				if [ "$STATUS_ARG" = "false" ]
				then
					cur_val=1
					print "$fs is mounted with nosuid option." >> log_msg 2>&1
					ice_status=2
				fi
			else
				if [ "$STATUS_ARG" = "true" ]
				then
					print "$fs is mounted without nosuid option.  This needs to be documented in IAO." >> log_msg 2>&1
					ice_status=2
				fi
			fi
		fi
	done < $TMPF1
	rm $TMPF1
	Script_Output
	exit 0
fi

####################
# Preview/Enforcing
####################
cur_val=
print "This rule does not support -e option." >> log_msg 2>&1
Script_Output
exit 0

