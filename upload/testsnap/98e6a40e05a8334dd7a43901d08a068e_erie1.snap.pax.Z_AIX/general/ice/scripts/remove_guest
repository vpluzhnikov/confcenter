#/usr/bin/ksh
# IBM_PROLOG_BEGIN_TAG         
# This is an automatically generated prolog.  
#                            
# $Source: aix710 bos/usr/lib/security/ice/scripts/remove_guest.sh 2$                         
#                                                           
# COPYRIGHT International Business Machines Corp. 2010,2010              
#                                                                      
# Pvalue: p2 
#Licensed Materials - Property of IBM
#
#Restricted Materials of IBM
#
#US Government Users Restricted Rights - Use, duplication or
#disclosure restricted by GSA ADP Schedule Contract with IBM Corp.
#
# Origin: 27
#
# sccsid: $Header: @(#) AIX710_area/2 bos/usr/lib/security/ice/scripts/remove_guest.sh, libice, aix710, _BASELINE_, 2010-05-18T13:57:13-05:00$
#
# IBM_PROLOG_END_TAG
#       COMPONENT_NAME: (ICE) remove_guest.sh
#       FUNCTIONS:      None
#       ORIGINS:        27
#
#       Syntax:
#               remove_guest -{c|e|p}[v] rulename toggle
#       Parameters:
#               -c      - Check mode
#               -e      - Enforce mode
#               -p      - Preview mode
#               -v      - verbose mode
#		rulename- rule_name
#		toggle	- Boolean
#			  false => Disable
#			  true  => Enable
#
#       OUTPUT:
#               0       - success
#               1       - check/enforce failure
#
#       Description:
#		Based on the toggle, this script removes/creates the guest
#		user/account. If the toggle is it removes the guest user &
#               if it is false, it creates the guest user.

export PATH=/usr/bin:/usr/sbin:$PATH
exec 2>&1


###
#Print Usage
###
Usage() {
	ice_status=1
        print "usage: \n
   remove_guest -{c|e|p}[v] rulename toggle\n" >> log_msg 2>&1
}

###
#Output from Script to the Native Library
###
Script_Output() {
        print -n "$cur_val%$ice_status%"
        cat log_msg
        print
}

###
#Process arguments
###

#Check mode
cflag=0
#Enforce mode
eflag=0
#Preview mode
pflag=0
#Verbose mode
vflag=0

###
#Initialize the Script Output variables
###
cur_val=true
ice_status=0
print -n > log_msg 2>&1

while getopts :cevp OPT
do
        case $OPT in
                c)      cflag=1;;
                e)      eflag=1;;
                v)      vflag=1;;
                p)      pflag=1;;
                ?|:)    Usage
			Script_Output
                        exit 1;;
        esac
done
shift $(($OPTIND -1))

#Enable Verbose
if [[ vflag -eq 1 ]];
then
        set -x
fi

#Need 2 arguments
if [[ $# -lt 2 ]];
then
        Usage
	Script_Output
        exit 1
fi

# -c, -e and -p mutually exclusive
((chkflg=cflag+eflag+pflag))
if [[ chkflg -ne 1 ]];
then
        Usage
	Script_Output
        exit 1
fi

RULE_NAME=$1
STATUS_ARG=$2
#Toggle argument must be true or false
if ( [ "$STATUS_ARG" != "true" ] && [ "$STATUS_ARG" != "false" ] )
then
        print "Toggle must be true or false" >> log_msg 2>&1
        Usage
        Script_Output
        exit 1
fi

# Preview mode set-up
if [[ pflag -eq 1 ]];
then
        ECHOPREFIX="echo"
else
        ECHOPREFIX=""
fi

PREREQ=/etc/security/ice/scripts/chkprereq
PREREQ_LIST="bos.rte.date,bos.rte.commands,bos.rte.shell,bos.rte.ILS"

$ECHOPREFIX $PREREQ $PREREQ_LIST

if [ $? -ne 0 ]
then
        print "prereq missing... " >> log_msg 2>&1
	print "Prereqs needed: " $PREREQ_LIST >> log_msg 2>&1
	ice_status=1
	Script_Output
        exit 0
fi


#checking
if [[ cflag -eq 1 ]];
then
	# Default case (Guest user should exist)
	if [ "$STATUS_ARG" = "false" ] 	
	then
		if [  -d /home/guest ]
		then
			print "Guest user exists on the system " >> log_msg 2>&1
			ice_status=0
			cur_val=true
			Script_Output
		else
			print "Guest User does not exist on the system" >> log_msg 2>&1 
			ice_status=2
			cur_val=false
			Script_Output
		fi
	# Guest user should not exist
	else
		if [ -d /home/guest ]
		then
			print "Guest user/account still exists" >> log_msg 2>&1
			ice_status=2
			cur_val=false
			Script_Output
		else
			ice_status=0
			cur_val=true
			Script_Output
		fi
	fi 

	exit 0
fi

###
#Preview/Enforcing
###

if [ "$STATUS_ARG" = "true" ]
then
	if [ -d /home/guest ]
	then
		$ECHOPREFIX rmuser guest  >> log_msg 2>&1
		if [ $? -ne 0 ]
		then
			print "rmuser command failed" >> log_msg 2>&1
			cur_val=false
			ice_status=1
			Script_Output
		else
			$ECHOPREFIX rm -rf /home/guest >> log_msg 2>&1
			$ECHOPREFIX odmdelete -qloc0=/home/guest -o inventory >> log_msg 2>&1
			cur_val=true
			ice_status=0
			Script_Output
		fi
	else
		ice_status=0
		cur_val=true
		Script_Output
	fi
else
	if [ ! -d /home/guest ]
	then
		$ECHOPREFIX mkuser guest >> log_msg 2>&1
		if [ $? -ne 0 ]
		then
			print "mkuser command failed. Can't create guest user"  >> log_msg 2>&1
			cur_val=true
			ice_status=1
			Script_Output
		else
			cur_val=false
			ice_status=0
			Script_Output
		fi
	else
		cur_val=false
		ice_status=0
		Script_Output
	fi
fi

exit 0
