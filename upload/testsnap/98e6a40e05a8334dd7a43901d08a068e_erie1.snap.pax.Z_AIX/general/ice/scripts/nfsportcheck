# IBM_PROLOG_END_TAG
#!/usr/bin/ksh
#
#       Description:
#		GEN005720: CAT II
#               This script enables/disbles nfs portcheck 
#		This script should be run with superuser privileges.

INSTALLDIR=/etc/security/ice/scripts
. $INSTALLDIR/iceInit

PREREQ_LIST="bos.rte.security,bos.rte.date,bos.rte.ILS"

checkPrereq

# Check if nfsd is running
if [ `ps -e | grep -v grep | grep -c nfsd` -eq 0 ]
then
        print "nfsd is not running so port monitoring is not enabled." >> log_msg 2>&1
	#startsrc -s nfsd - will start nfsd
        ice_status=1
        Script_Output
        exit 0
fi

###########
# Checking
###########
if [[ cflag -eq 1 ]];
then
	$ECHOPREFIX nfso -o portcheck|grep 1 >> log_msg 2>&1
	if [ $? -eq 0 ]
	then
		cur_val=1
		# Default case
        	if [ "$STATUS_ARG" = "false" ]
        	then
			print "nfsportcheck is active and should be disabled." >> log_msg 2>&1
			ice_status=2
		fi
	else
		cur_val=0
		# Enable case
		if [ "$STATUS_ARG" = "true" ]
		then
			print "nfsportcheck is inactive and should be enabled." >> log_msg 2>&1
			ice_status=2
		fi
	fi
	Script_Output
	exit 0
fi

####################
# Preview/Enforcing
####################
cur_val=
$ECHOPREFIX nfso -o portcheck|grep 1 >> log_msg 2>&1
if [ $? -eq 0 ]
then
	#portcheck is 1
	if [ "$STATUS_ARG" = "false" ]
	then
		$ECHOPREFIX nfso -o portcheck=0 >> log_msg 2>&1
		if [ $? -ne 0 ]
		then
			ice_status=1
			print "Error in disabling nfsportcheck." >> log_msg 2>&1
		fi
	fi
else
	#portcheck is 0
	if [ "$STATUS_ARG" = "true" ]
	then
		$ECHOPREFIX nfso -o portcheck=1 >> log_msg 2>&1
		if [ $? -ne 0 ]
		then
			ice_status=1
			print "Error in enabling nfsportcheck." >> log_msg 2>&1
		fi
	fi
fi

Script_Output
exit 0
