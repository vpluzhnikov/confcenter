#!/usr/bin/ksh
# IBM_PROLOG_BEGIN_TAG         
# This is an automatically generated prolog.  
#                            
# $Source: aix710 bos/usr/lib/security/ice/scripts/setup_ssh.sh 1$                         
#                                                           
# COPYRIGHT International Business Machines Corp. 2010,2010              
#                                                                      
# Pvalue: p2 
#Licensed Materials - Property of IBM
#
#Restricted Materials of IBM
#
#US Government Users Restricted Rights - Use, duplication or
#disclosure restricted by GSA ADP Schedule Contract with IBM Corp.
#
# Origin: 27
#
# sccsid: $Header: @(#) AIX710_area/1 bos/usr/lib/security/ice/scripts/setup_ssh.sh, libice, aix710, 1010A_710 2010-03-02T17:20:42-06:00$
#
# IBM_PROLOG_END_TAG
#       COMPONENT_NAME: (ICE) setup_ssh.sh
#       FUNCTIONS:      None
#       ORIGINS:        27
#
#       Syntax:
#               setup_ssh -{c|e|p}[v] rulename toggle
#       Parameters:
#               -c      - Check mode
#               -e      - Enforce mode
#               -p      - Preview mode
#               -v      - verbose mode (unimplemented)
#               lname   - rule_name
#               toggle  - Boolean
#                         false => Disable 
#                         true  => Enable

#       OUTPUT:
#               0       - success
#               1       - check/enforce failure
#
#       Description:
#               This script enables/disbles SSH 
#               This script should be run with superuser privileges.

export PATH=/usr/bin:/usr/sbin:$PATH
exec 2>&1

###
#Print Usage
###
Usage() {
        ice_status=1
        print "usage: \n
   setup_ssh -{c|e|p}[v] rulename toggle\n" >> log_msg 2>&1
}

###
#Output from Script to the Native Library
###
Script_Output() {
        print -n "$cur_val%$ice_status%"
        cat log_msg
        print
}

###
#Process arguments
###

#Check mode
cflag=0
#Enforce mode
eflag=0
#Preview mode
pflag=0
#Verbose mode
vflag=0

###
#Initialize the Script Output variables
###
cur_val=0
ice_status=0
print -n > log_msg 2>&1

while getopts :cevp OPT
do
        case $OPT in
                c)      cflag=1;;
                e)      eflag=1;;
                v)      vflag=1;;
                p)      pflag=1;;
                ?|:)    Usage
                        Script_Output
                        exit 1;;
        esac
done
shift $(($OPTIND -1))

#Enable Verbose
if [[ vflag -eq 1 ]];
then
        set -x
fi

#Need 1 argument
if [[ $# -lt 2 ]];
then
        Usage
        Script_Output
        exit 1
fi

# -c, -e and -p mutually exclusive
((chkflg=cflag+eflag+pflag))
if [[ chkflg -ne 1 ]];
then
        Usage
        Script_Output
        exit 1
fi

RULE_NAME=$1
STATUS_ARG=$2
#Toggle argument must be true or false
if ( [ "$STATUS_ARG" != "true" ] && [ "$STATUS_ARG" != "false" ] )
then
        print "Toggle must be true or false" >> log_msg 2>&1
        Usage
        Script_Output
        exit 1
fi

# Preview mode set-up
if [[ pflag -eq 1 ]];
then
        ECHOPREFIX="echo"
else
        ECHOPREFIX=""
fi

PREREQ=/etc/security/ice/scripts/chkprereq
PREREQ_LIST="openssh.base.client,openssh.base.server"

$ECHOPREFIX $PREREQ $PREREQ_LIST

if [ $? -ne 0 ]
then
        print "prereq missing... " >> log_msg 2>&1
        print "Prereqs needed: " $PREREQ_LIST >> log_msg 2>&1
        ice_status=1
        Script_Output
        exit 0
fi


#checking
if [[ cflag -eq 1 ]];
then
	$ECHOPREFIX lssrc -s sshd|grep active >> log_msg 2>&1
	if [ $? -eq 0 ]
	then
		cur_val=1
		# Default case
        	if [ "$STATUS_ARG" = "false" ]
        	then
			print "SSH is active and should be disabled." >> log_msg 2>&1
			ice_status=2
		fi
	else
		cur_val=0
		# Enable case
		if [ "$STATUS_ARG" = "true" ]
		then
			print "SSH is inactive and should be enabled." >> log_msg 2>&1
			ice_status=2
		fi
	fi
	Script_Output
	exit 0
fi

###
#Preview/Enforcing
###


cur_val=
$ECHOPREFIX lssrc -s sshd|grep active >> log_msg 2>&1
if [ $? -eq 0 ]
then
	if [ "$STATUS_ARG" = "false" ]
	then
		$ECHOPREFIX stopsrc -s sshd >> log_msg 2>&1
		if [ $? -ne 0 ]
		then
			ice_status=1
			print "Error in disabling SSH." >> log_msg 2>&1
		fi
	fi
else
	if [ "$STATUS_ARG" = "true" ]
	then
		$ECHOPREFIX startsrc -s sshd >> log_msg 2>&1
		if [ $? -ne 0 ]
		then
			ice_status=1
			print "Error in enabling SSH." >> log_msg 2>&1
		fi
	fi
fi

Script_Output
exit 0
