<?xml version="1.0" encoding="UTF-8"?>
<Catalog id="namerslvParam" version="2.0">

 <ShortDescription><NLSCatalog catalog="artexcat.cat" setNum="29" msgNum="1">Domain name server entries for local resolver routines in the system configuration database.</NLSCatalog></ShortDescription>
 <Description><NLSCatalog catalog="artexcat.cat" setNum="29" msgNum="2">Directly manipulates domain name server entries for local resolver routines in the system configuration database.</NLSCatalog></Description>

 <CfgMethod id="namerslv">
   <Get type="current">
     <Command>export LANG=C; /usr/bin/namerslv -s</Command>
     <Filter>awk '{ printf("%s =", $1);for (i=2;i&lt;=NF;i++) {printf(" %s",$i)}; printf("\n") }'</Filter>
     <Mask name="1" value="2">(.*) = (.*)</Mask>
   </Get>

   <Get type="nextboot">
     <Command>export LANG=C; /usr/bin/namerslv -s</Command>
     <Filter>awk '{ printf("%s =", $1);for (i=2;i&lt;=NF;i++) {printf(" %s",$i)}; printf("\n") }'</Filter>
     <Mask name="1" value="2">(.*) = (.*)</Mask>
   </Get>

 </CfgMethod>

 <ParameterDef name="nameserver" type="string" cfgmethod="namerslv">
   <Description><NLSCatalog catalog="artexcat.cat" setNum="29" msgNum="3">Name servers (IP addresses)</NLSCatalog></Description>

   <Set type="permanent"> 
     <Command>export LANG=C; /usr/bin/namerslv -X -I; list=%v1; for address in $list; do /usr/bin/namerslv -a -i $address; done;</Command>
   </Set>
 </ParameterDef>
 
 <ParameterDef name="domain" type="string" cfgmethod="namerslv">
   <Description><NLSCatalog catalog="artexcat.cat" setNum="29" msgNum="4">Domain name</NLSCatalog></Description>

   <Set type="permanent">
     <Command>export LANG=C; /usr/bin/namerslv -d -n; /usr/bin/namerslv -a -D %v1</Command>
   </Set>
 </ParameterDef>
 
 <ParameterDef name="search" type="string" cfgmethod="namerslv">
   <Description><NLSCatalog catalog="artexcat.cat" setNum="29" msgNum="5">Search list</NLSCatalog></Description>

   <Set type="permanent">
     <Command>export LANG=C; /usr/bin/namerslv -d -l; /usr/bin/namerslv -a -S %v1</Command>
   </Set>
 </ParameterDef>
 
</Catalog>
