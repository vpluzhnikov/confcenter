<?xml version="1.0" encoding="UTF-8"?>
<Catalog id="trcctlParam" version="2.0">

 <ShortDescription><NLSCatalog catalog="artexcat.cat" setNum="47" msgNum="1">System trace parameters.</NLSCatalog></ShortDescription>

 <Description><NLSCatalog catalog="artexcat.cat" setNum="47" msgNum="2">Management of the system trace control parameters.</NLSCatalog></Description>

 <CfgMethod id="tracemgt">
  <Get type="current">
   <Command>/usr/bin/trcctl -l</Command>
   <Filter>awk -F: '{ gsub(" ","",$1); print $1 " =" $2 }'</Filter>
   <Mask name="1" value="2">(.*) = (.*)</Mask>
  </Get>

  <Get type="nextboot">
   <Command>/usr/bin/trcctl -l</Command>
   <Filter>awk -F: '{ gsub(" ","",$1); print $1 " =" $2 }'</Filter>
   <Mask name="1" value="2">(.*) = (.*)</Mask>
  </Get>

  <Set type="permanent">
   <Command>/usr/bin/trcctl%a</Command>
  </Set>
 </CfgMethod>

 <ParameterDef name="DefaultBufferSize" type="integer" cfgmethod="tracemgt">
  <Description><NLSCatalog catalog="artexcat.cat" setNum="47" msgNum="3">Specifies the default trace buffer size. The original default values are 128 KB and 256 KB for a 32- or 64-bit kernel. Setting a new default value will apply it to both kernels.</NLSCatalog></Description>

  <Set type="permanent">
   <Argument> -T %v1</Argument>
  </Set>
 </ParameterDef>

 <ParameterDef name="DefaultLogFile" type="string" cfgmethod="tracemgt">
  <Description><NLSCatalog catalog="artexcat.cat" setNum="47" msgNum="4">Specifies the default log file path. The default value is /var/adm/ras/trcfile.</NLSCatalog></Description>

  <Set type="permanent">
   <Argument> -o %v1</Argument>
  </Set>
 </ParameterDef>

 <ParameterDef name="DefaultLogFileSize" type="string" cfgmethod="tracemgt">
  <Description><NLSCatalog catalog="artexcat.cat" setNum="47" msgNum="5">Specifies the default log file path. The default value is /var/adm/ras/trcfile.</NLSCatalog></Description>

  <Set type="permanent">
   <Argument> -L %v1</Argument>
  </Set>
 </ParameterDef>

 <ParameterDef name="Non-RootUserBufferSizeMaximum" type="integer" cfgmethod="tracemgt">
  <Description><NLSCatalog catalog="artexcat.cat" setNum="47" msgNum="6">Specifies the maximum buffer size a non-root user may specify. The default is 1 MB, 1048576 bytes.</NLSCatalog></Description>

  <Set type="permanent">
   <Argument> -N %v1</Argument>
  </Set>
 </ParameterDef>

 <ParameterDef name="DefaultComponentsDirectory" type="string" cfgmethod="tracemgt">
  <Description><NLSCatalog catalog="artexcat.cat" setNum="47" msgNum="7">Specifies the default Component Trace log directory path. The default value is /var/adm/ras/trc_ct.</NLSCatalog></Description>

  <Set type="permanent">
   <Argument> -d %v1</Argument>
  </Set>
 </ParameterDef>

 <ParameterDef name="DefaultLMTLogDir" type="string" cfgmethod="tracemgt">
  <Description><NLSCatalog catalog="artexcat.cat" setNum="47" msgNum="8">Specifies the default Lightweight Memory Trace log directory path. The default value is /var/adm/ras/mtrcdir.</NLSCatalog></Description>

  <Set type="permanent">
   <Argument> -M %v1</Argument>
  </Set>
 </ParameterDef>
</Catalog>
