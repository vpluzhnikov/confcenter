<?xml version="1.0" encoding="UTF-8"?>
<Catalog id="nisParam" version="2.0">

  <ShortDescription><NLSCatalog catalog="artexcat.cat" setNum="32" msgNum="1">nis configuration</NLSCatalog></ShortDescription>
 
  <Description><NLSCatalog catalog="artexcat.cat" setNum="32" msgNum="2">Configuration parameters definition for the 'chypdom', 'chclient' commands</NLSCatalog></Description>
 
  <CfgMethod id="chypdom">
  
    <Get type="current">
      <Command>/usr/bin/domainname</Command>
      <Filter>/usr/bin/tr -d '\n'</Filter>
    </Get>

    <Get type="nextboot">
      <Command>/usr/bin/domainname</Command>
      <Filter>/usr/bin/tr -d '\n'</Filter>
    </Get>
  
    <Set type="permanent">
      <Command>/usr/sbin/chypdom -B %v1</Command>
    </Set>

    <Set type="nextboot">
      <Command>/usr/sbin/chypdom -I %v1</Command>
    </Set>

  </CfgMethod>


  <ParameterDef name="NISdomain" type="string" cfgmethod="chypdom">
    <Description><NLSCatalog catalog="artexcat.cat" setNum="32" msgNum="3">Changes the current NIS domain name of the system.</NLSCatalog></Description>
  </ParameterDef>


  <CfgMethod id="chclient">
  
    <Get type="current">
      <Command>chclientout=`/usr/sbin/chclient` ; if [ $? -eq 0 ] ; then echo $chclientout ; else echo "" ; fi</Command>
      <Filter>/usr/bin/tr -d '\n'</Filter>
    </Get>

    <Get type="nextboot">
      <Command>chclientout=`/usr/sbin/chclient` ; if [ $? -eq 0 ] ; then echo $chclientout ; else echo "" ; fi</Command>
      <Filter>/usr/bin/tr -d '\n'</Filter>
    </Get>
  
    <Set type="permanent">
      <Command>/usr/sbin/chclient -B -S %v1</Command>
    </Set>

    <Set type="nextboot">
      <Command>/usr/sbin/chclient -I -S %v1</Command>
    </Set>

  </CfgMethod>


  <ParameterDef name="NISserver" type="string" cfgmethod="chclient">
    <Description><NLSCatalog catalog="artexcat.cat" setNum="32" msgNum="4">Changes the current NIS server of the system.</NLSCatalog></Description>
  </ParameterDef>

</Catalog>
