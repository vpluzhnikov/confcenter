<?xml version="1.0" encoding="UTF-8"?>
<Catalog id="chdev.sys0Param" version="2.0">
	
	<ShortDescription><NLSCatalog catalog="artexcat.cat" setNum="7" msgNum="1">chdev parameters</NLSCatalog></ShortDescription>
	<Description><NLSCatalog catalog="artexcat.cat" setNum="7" msgNum="2">Parameter definition for the 'chdev' command</NLSCatalog></Description>

	<CfgMethod id="chdev">

		<Get type="current">
			<Command>/usr/sbin/lsattr -E -l sys0</Command>
			<Filter>/usr/bin/sed -e 's/enable/1/' -e 's/disable/0/' -e 's/true/1/' -e 's/false/0/' | awk '{print $1"="$2;}'</Filter>
			<Mask name="1" value="2">(.*)=(.*)</Mask>
		</Get>

		<Get type="nextboot">
			<Command>/usr/sbin/lsattr -E -l sys0</Command>
			<Filter>/usr/bin/sed -e 's/enable/1/' -e 's/disable/0/' -e 's/true/1/' -e 's/false/0/' | awk '{print $1"="$2;}'</Filter>
			<Mask name="1" value="2">(.*)=(.*)</Mask>
		</Get>

		<Set type="permanent">
			<Command>/usr/sbin/chdev -l sys0%a</Command>
			<Argument> -a %p=%v1</Argument>
		</Set>

		<Set type="nextboot">
			<Command>/usr/sbin/chdev -P -l sys0%a</Command>
			<Argument> -a %p=%v1</Argument>
		</Set>

	</CfgMethod>

	<ParameterDef name="SW_dist_intr" cfgmethod="chdev" type="boolean">
		<Description><NLSCatalog catalog="artexcat.cat" setNum="7" msgNum="3">Enable SW distribution of interrupts</NLSCatalog></Description>
		<Set type="permanent">
			<Argument> -a %p=`if [ %v1 = 1 ]; then echo "true"; else echo "false"; fi`</Argument>
		</Set>
		<Set type="nextboot">
			<Argument> -a %p=`if [ %v1 = 1 ]; then echo "true"; else echo "false"; fi`</Argument>
		</Set>
	</ParameterDef>

